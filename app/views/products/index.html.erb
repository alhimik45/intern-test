<% if @products.empty? %>
    <p>На данный момент товаров нет</p>
<% end %>
<% @products.each do |product| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
        <%= image_tag product.photo, class: 'product-img' %>

        <div class="caption">
          <% if current_user == product.user %>
              <p class="pull-right">
                <%= link_to(image_tag('edit-icon.png', class: 'edit-btn'), edit_product_path(product)) %>
              </p>
          <% end %>
          <h4>
            <%= link_to product.name, product_path(product) %>
          </h4>

          <p><%= product.description %></p>
        </div>
      </div>
    </div>
<% end %>

